# MongoDB connection string
# Para desarrollo local: mongodb://localhost:27017/starsblocks
# Para MongoDB Atlas: mongodb+srv://user:password@cluster.xxxxx.mongodb.net/starsblocks
MONGODB_URI=mongodb://localhost:27017/starsblocks

# Auth.js secret (genera uno con: openssl rand -base64 32)
AUTH_SECRET=starsblocks-secret-key-change-in-production

# BSV Wallet Configuration
# Private key in hexadecimal format (generate with: node -e "console.log(require('@bsv/sdk').PrivateKey.fromRandom().toHex())")
PRIVATE_KEY=your_private_key_hex_here

# Storage URL for BSV wallet (optional, defaults to https://storage.babbage.systems)
STORAGE_URL=https://storage.babbage.systems

# Network: 'main' or 'test' (optional, defaults to 'main')
NETWORK=main